# Configurações do Microsoft Graph API
# Obtenha estes valores no Azure Portal > App registrations

# ID do tenant (diretório) do Azure AD
MICROSOFT_TENANT_ID=your-tenant-id-here

# ID da aplicação registrada no Azure AD
MICROSOFT_CLIENT_ID=your-client-id-here

# Segredo da aplicação (Client Secret)
MICROSOFT_CLIENT_SECRET=your-client-secret-here

# ID do plano do Microsoft Planner onde as tarefas serão criadas
# Pode ser obtido através da URL do planner ou via Graph API
MICROSOFT_PLANNER_PLAN_ID=your-plan-id-here

# Configurações opcionais
FLASK_ENV=development
FLASK_DEBUG=True

